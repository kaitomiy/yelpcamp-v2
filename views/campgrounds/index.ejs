<% layout('layouts/boilerplate') %>
<body>
  <h1>All Campgrounds</h1>
  <div>
    <a href="/campgrounds/new">Add Camground</a>
  </div>
  <ul>
    <% campgrounds.forEach(campground => { %>
    <li>
      <a href="/campgrounds/<%= campground._id %>"><%= campground.title %></a>
    </li>
    <% }) %>
  </ul>
</body>
